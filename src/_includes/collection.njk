<!DOCTYPE html>
<html dir="ltr" lang="en-US">
  <head>
    <title>{{ title }} | Collections | Photography | Zachary Crespin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Meta -->
    <meta property="og:title" content="{{ title }} | Collections | Photography | Zachary Crespin">
    <meta name="description" content="{{ title }} Photo Collection | Zachary Crespin">
    <meta property="og:description" content="{{ title }} Photo Collection | Zachary Crespin">
    <meta name="image" content="/images/share-images/{{ id }}.png">
    <meta property="og:image" content="/images/share-images/{{ id }}.png">
    <meta property="og:site_name" content="Zachary Crespin">
    <!-- CSS -->
    <link rel="stylesheet" href="/css/main.css">
    <!-- JS -->
    <script src="/js/main.js"></script>
    <!-- Icons -->
    <link rel="icon" href="/images/favicon-black.png" id="favicon">
    <link rel="apple-touch-icon" href="/images/icons/apple-touch-icon.png">
    <!-- PWA -->
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#4A4A4A">
{% include 'analytics.njk' %}
    <!-- Twitter -->
    <meta property="twitter:site" content="@ZacharyCrespin">
    <meta property="twitter:creator" content="@ZacharyCrespin">
    <!-- gallery link -->
    <link rel="stylesheet" href="/css/gallery.min.css">
    <script src="/js/gallery.min.js" async></script>
    <script>
      window.addEventListener('load', function() {
        baguetteBox.run('.gallery');
      });
    </script>
</head>
<body>
{% include 'header.njk'  %}
    <main id="content">
    <h1>{{ title }}</h1>
    <div class="gallery">
{{ content | safe }}
    </div>
    </main>
{% include 'footer.njk' %}
</body>
</html>