---
layout: base
titleOverride: true
eleventyComputed:
  title: "{{ name }}"
  seoTitle: "{{ name }} â€” Photography"
  description: "{{ name }}, a photo by Zachary Crespin"
  shareImage: "{{ src }}"
  headCode: |
    <script type="application/ld+json">
      {
        "@context": "https://schema.org/",
        "@type": "ImageObject",
        "contentUrl": "https://zacharyc.site/images/{{ src }}",
        "creator": {
          "@type": "Person",
          "name": "Zachary Crespin"
        },
        "creditText": "Zachary Crespin",
        "copyrightNotice": "Zachary Crespin"
      }
    </script>
---
<main>
  <button id="close" onclick="history.back()" aria-label="Close">
    <svg width="35" height="35" viewBox="0 0 35 35" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M9.07812 27.4531L7.54688 25.9219L15.9687 17.5L7.54688 9.07812L9.07812 7.54688L17.5 15.9687L25.9219 7.54688L27.4531 9.07812L19.0313 17.5L27.4531 25.9219L25.9219 27.4531L17.5 19.0313L9.07812 27.4531Z" fill="white"/>
    </svg>
  </button>
  <eleventy-image :src="'src/images/' + src" :alt="alt" width="auto"></eleventy-image>
</main>

<style>
  body {
    margin: 0;
  }
  main {
    margin: 0;
    width: 100vw;
    height: 100vh;
    height: 100dvh;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  #close {
    margin: 0;
    padding: 0.25rem;
    position: fixed;
    top: 1rem;
    right: 1rem;
    line-height: 1;
    border-radius: 100vmax;
  }
  #close svg path {
    fill: var(--color-text);
  }
  #close:hover svg path, #close:focus-visible svg path {
    fill: var(--color-bg);
  }
  img {
    width: auto;
    height: auto;
    max-width: calc(100vw - 1rem);
    max-height: calc(100vh - 1rem);
    max-height: calc(100dvh - 1rem);
  }
</style>