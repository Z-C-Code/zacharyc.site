---
title: Code
description: Code Projects and Experiments
layout: default
---
<section>
  <h2>Featured Projects</h2>
  <div class="cards wide">
    {%- for project in collections.code | reverse -%}
      {% if project.data.featured %}
      <div class="card">
        {% image "./src/images/"+project.data.img, project.data.title, 600 %}
        <div class="text">
          <h3 class="h4">{{ project.data.title }}</h3>
          <div class="tags">
            {%- for tag in project.data.tech -%}
              <p class="tag">{{ tag }}</p>
            {%- endfor -%}
          </div>
          {% if project.data.live %}<a class="button" href="{{ project.data.live }}" target="_blank">Live</a>{% endif %}
          {% if project.data.source %}<a class="button" href="{{ project.data.source }}" target="_blank">Source</a>{% endif %}
        </div>
      </div>
      {% endif %}
    {%- endfor -%}
  </div>
</section>

<section>
  <h2>More Projects and Experiments</h2>
  <div class="cards">
    {%- for project in collections.code | reverse -%}
    <div class="card">
      <h3 class="h4">{{ project.data.title }}</h3>
      <p>{{ project.data.date | fullString }}</p>
      <div class="tags">
        {%- for tag in project.data.tech -%}
          <p class="tag">{{ tag }}</p>
        {%- endfor -%}
      </div>
      {% if project.data.live %}<a class="button" href="{{ project.data.live }}" target="_blank">Live</a>{% endif %}
      {% if project.data.source %}<a class="button" href="{{ project.data.source }}" target="_blank">Source</a>{% endif %}
    </div>
    {%- endfor -%}
  </div>
</section>
