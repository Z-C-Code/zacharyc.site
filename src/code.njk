<h2>Featured Projects</h2>
<div class="cards wide" aria-label="Featured Projects">
  <a class="card wide" id="bellschedule" href="https://fhsbellschedule.web.app/" target="_blank">
    {% image "./src/images/code/bellschedule.png", "FHS Bell Schedule", 600 %}
    <div class="text">
      <h3 class="h4">FHS Bell Schedule</h3>
      <p>Python</p>
      <span class="button">View</span>
    </div>
  </a>
  <div class="card wide" id="quotes">
    {% image "./src/images/code/quote.png", "Quiet people have the loudest minds. -Stephen Hawking", 600 %}
    <div class="text">
      <h3 class="h4">Quotes API & Website</h3>
      <p>Express, Node JS</p>
      <a class="button" href="https://quotes.zacharyc.site" target="_blank">Visit Website</a>
      <a class="button" href="https://github.com/ZacharyCrespin/quote-api" target="_blank">Use API</a>
    </div>
  </div>
</div>
<h2>All Projects</h2>
<div class="cards" aria-label="All Projects">
  {%- for code in collections.code | reverse -%}
  <a class="card" href="{{ code.data.link }}" target="_blank" aria-label="{{ code.data.title }}">
    <h3 class="h4">{{ code.data.title }}</h3>
    <p>{{ code.data.tech }}</p>
    <span class="button">View</span>
  </a>
  {%- endfor -%}
</div>