---
title: Experiments
description: Experiments
layout: default
id: experiments
---
<div class="cards">
  {%- for experiment in collections.experiment | reverse -%}
  <a class="card" href="{{ experiment.data.link }}" target="_blank">
    <h3 class="h4">{{ experiment.data.title }}</h3>
    <div class="tags">
      {%- for tag in experiment.data.tech -%}
        <p class="tag">{{ tag }}</p>
      {%- endfor -%}
    </div>
    <span class="button">View</span>
  </a>
  {%- endfor -%}
</div>