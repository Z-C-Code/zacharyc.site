---
title: Experiments
description: Experiments
layout: default
id: experiments
---
<div class="cards">
  {%- for experiment in collections.experiment | reverse -%}
  <div class="card">
    <h3 class="h4">{{ experiment.data.title }}</h3>
    <div class="tags">
      {%- for tag in experiment.data.tech -%}
        <p class="tag">{{ tag }}</p>
      {%- endfor -%}
    </div>
    {% if experiment.data.live %}<a class="button" href="{{ experiment.data.live }}" target="_blank">Live</a>{% endif %}
    {% if experiment.data.source %}<a class="button" href="{{ experiment.data.source }}" target="_blank">Source</a>{% endif %}
  </div>
  {%- endfor -%}
</div>