---
title: All Films
id: all-films
layout: default
---
<p>Cheak back soon to see older films.</p>

<div class="filter">
  <p>Jump to Year: </p>
  <div class="tags">
    <a href="/film/all-films/#20-21" class="tag">20-21</a>
    <a href="/film/all-films/#21-22" class="tag">21-22</a>
    <a href="/film/all-films/#22-23" class="tag">22-23</a>
    <a href="/film/all-films/#23-24" class="tag">23-24</a>
  </div>
</div>
<style>
  .filter {
    display: flex;
    align-items: center;
    column-gap: 0.5rem;
  }
</style>

<div class="cards wide">
  {%- for film in collections.film | reverse -%}
  <div class="card video" id="{{ film.data.id }}" aria-label="{{ film.data.title }}">
    {% if film.data.watchlink %}
    <a href="{{ film.data.watchlink }}" class="video-preview" aria-label="Watch Now">
      <img src="/images/icons/play_circle.svg" class="play-circle" alt="play icon">
      {% image film.data.img, film.data.imgalt, 600 %}
    </a>
    {% else %}
    {% image film.data.img, film.data.imgalt, 600 %}
    {% endif %}
    <div class="text">
      <h2 class="h3">{{ film.data.title }}</h2>
      <p>{{ film.data.date | fullString }}</p>
      {% if film.data.description %}
      <p>{{ film.data.description }}</p>
      {% endif %}
      {% if film.data.watchlink %}
      <a href="{{ film.data.watchlink }}" class="button">Watch Now</a>
      {% endif %}
      {% if film.data.infolink %}
      <a href="{{ film.data.infolink }}" class="button">More Info</a>
      {% endif %}
    </div>
  </div>
  {%- endfor -%}
</div>
