    <h1>Latest Work</h1>
    <style>
      /* i know this is a terable way to do it */
      /* i will fix it at some point */
      /* basicly if it is child 5 or higher it aplys display = none */
      .collections .card:nth-child(+n+5) {
        display: none;
      }
    </style>
    <h2>Photos</h2>
    <div class="collections">
      {%- for collection in collections.collection -%}
      <div class="card">
        <img class="card-image" src="{{ collection.data.img }}" alt="{{ collection.data.title }} Collection Image" width="100%">
          <h2 class="card-text">{{ collection.data.title }}</h2>
          <p class="card-text">{{ collection.data.numberofphotos }} Photos</p>
          <a class="button" href="/photography/collections/{{ collection.data.url }}.html">View Collection</a>
      </div>
      {%- endfor -%}
    </div>
    <a class="button" href="/photography/collections.html">View More Collections</a>