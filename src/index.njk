    <p>"This video isn't perfect." was selected for scringing at the Tustin Student Film Festival, where it won Best Experimental Film and Best Story.</p>
    <a href="https://youtu.be/DnIjLDGCDhg" class="button">Watch</a>
  </div>
</div>

<section aria-label="Latest Collections">
  <h2>Latest Photos</h2>
  <div class="cards">
    {%- for collection in collections.collection | reverse | limit(4) -%}
    <a class="card" href="{{ collection.url }}" aria-label="{{ collection.data.title }}">
      {% image "./src/images/" + collection.data.img, collection.data.title + " Collection Image", 300 %}
      <h3>{{ collection.data.title }}</h3>
      <p>{{ collection.data.numberofphotos }} Photos</p>
      <span class="button">View</span>
    </a>
    {%- endfor -%}
  </div>
  <a class="button" href="/photography/collections/">More Collections</a>
</section>

<section aria-label="Featured Projects">
  <h2>Featured Projects</h2>
  <div class="cards wide">
    {%- for project in collections.code | reverse -%}
      {% if project.data.featured %}
      <div class="card" aria-label="{{ project.data.title }}">
        {% image "./src/images/"+project.data.img, project.data.title, 600 %}
        <div class="text">
          <h3>{{ project.data.title }}</h3>
          <div class="tags" aria-label="Tech Used">
            {%- for tag in project.data.tech -%}
              <p class="tag">{{ tag }}</p>
            {%- endfor -%}
          </div>
          {% if project.data.live %}<a class="button" href="{{ project.data.live }}" target="_blank">Live</a>{% endif %}
          {% if project.data.source %}<a class="button" href="{{ project.data.source }}" target="_blank">Source</a>{% endif %}
        </div>
      </div>
      {% endif %}
    {%- endfor -%}
  </div>
  <a class="button" href="/code/">More Projects</a>
</section>
