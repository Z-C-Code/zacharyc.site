    <h2>Latest Collections</h2>
    <div class="collections">
    {%- for collection in collections.collection | reverse -%}
    <div class="card">
      <img class="card-image" src="{{ collection.data.img }}" alt="{{ collection.data.title }} Collection Image" width="100%">
        <h2 class="card-text">{{ collection.data.title }}</h2>
        <p class="card-text">{{ collection.data.numberofphotos }} Photos</p>
        <a class="button" href="/photography/collections/{{ collection.data.url }}">View Collection</a>
    </div>
    {%- endfor -%}
